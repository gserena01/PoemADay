{
  "name": "Poem-a-Day",
  "version": "1.0",
  "description": "Read and annotate a new poem each day!",
  "permissions": ["activeTab", "declarativeContent", "storage", "http://poetrydb.org/*"],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Poem-a-Day",
    "default_icon": {
      "16": "images/Poem-A-Day_Logo16.png",
      "32": "images/Poem-A-Day_Logo32.png",
      "48": "images/Poem-A-Day_Logo48.png",
      "128": "images/Poem-A-Day_Logo128.png"
    }
  },
  "chrome_url_overrides": {"newtab":"newtab.html"},
  "icons": {
    "16": "images/Poem-A-Day_Logo16.png",
    "32": "images/Poem-A-Day_Logo32.png",
    "48": "images/Poem-A-Day_Logo48.png",
    "128": "images/Poem-A-Day_Logo128.png"
  },
  "manifest_version": 2
}
